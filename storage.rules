rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    function hasDownloadToken() {
      return request.query.token != null
        && resource != null
        && resource.metadata != null
        && resource.metadata.firebaseStorageDownloadTokens != null
        && resource.metadata.firebaseStorageDownloadTokens.matches('(^|,)' + request.query.token + '($|,)');
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
        request.resource.size < 20 * 1024 * 1024;
    }

    function isValidPDF() {
      return request.resource.contentType == 'application/pdf' &&
        request.resource.size < 50 * 1024 * 1024;
    }

    function hasFontExtension() {
      return request.resource != null
        && request.resource.name.matches('users/.+/brand-fonts/.*\\.(ttf|otf|woff2?|TTF|OTF|WOFF2?)$');
    }

    function hasFontContentType() {
      return request.resource != null
        && (
          request.resource.contentType == null ||
          request.resource.contentType == '' ||
          request.resource.contentType.matches('font/.*') ||
          request.resource.contentType.matches('application/(x-)?font-.*') ||
          request.resource.contentType == 'application/octet-stream'
        );
    }

    function isValidFont() {
      return request.resource.size < 20 * 1024 * 1024 &&
        (
          hasFontContentType() ||
          hasFontExtension()
        );
    }

    function isValidUserAsset() {
      return isValidImage();
    }

    match /users/{userId}/avatar/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId) && isValidImage();
    }

    match /users/{userId}/brandKits/{brandKitId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isValidImage();
    }

    match /users/{userId}/uploads/{assetId} {
      allow read: if isOwner(userId) || hasDownloadToken();
      allow list: if isOwner(userId);
      allow write: if isOwner(userId) && isValidUserAsset();
      allow delete: if isOwner(userId);
    }

    match /users/{userId}/brand-fonts/{fileName=**} {
      allow read: if isOwner(userId) || hasDownloadToken();
      allow write: if isOwner(userId) && isValidFont();
      allow delete: if isOwner(userId);
    }

    match /projects/{projectId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidImage();
    }

    match /projects/{projectId}/thumbnail {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
    }

    match /templates/{templateId}/previews/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
    }

    match /templates/{templateId}/thumbnail {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
    }

    match /marketplace-thumbnails/{creatorId}/{fileName} {
      allow read: if true;
      allow write: if (isOwner(creatorId) || isAdmin()) && isValidImage();
      allow delete: if isOwner(creatorId) || isAdmin();
    }

    match /exports/{userId}/{exportId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && (isValidImage() || isValidPDF());
    }

    match /admin/{path=**} {
      allow read, write: if isAdmin();
    }
  }
}
